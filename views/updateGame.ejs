<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/newGame.css">
</head>
<body>
  <h1><%= title %></h1>
  <div class="error-container">
    <% if (errors) { %>
      <% errors.forEach(function(error) { %>
        <p class="errors"><%= error %></p>
      <% }); %>
    <% } %>
  </div>
  <form action="<%= url %>" method="post">
    <input type="hidden" name="_method" value="put">
    <div>
      <label for="name">Name</label>
      <input type="text" id="name" name="name" value="<%= name %>" required>
    </div>
    <div>
      <label for="developer">Developer</label>
      <select name="developer" id="developer" required>
        <% for (let i = 0; i < developers.length; i++) { %>
          <option value="<%= developers[i].name %>" <% if (developers[i].name === currentDeveloper) { %> selected <% } %>>
            <%= developers[i].name %>
          </option>
        <% } %>
      </select>
    </div>
    <div>
      <label>Genres</label>
      <div id="genres">
        <% for (let i = 0; i < genres.length; i++) { %>
          <div class="genre-item">
            <input name="genres" value="<%= genres[i].name %>" type="checkbox" id="genre-<%= i %>" <% if (genres[i].checked) { %> checked <% } %>>
            <label for="genre-<%= i %>"><%= genres[i].name %></label>
          </div>
        <% } %>
      </div>
    </div>
    <div>
      <label>Platforms</label>
      <div id="platforms">
        <% for (let i = 0; i < platforms.length; i++) { %>
          <div class="platform-item">
            <input name="platforms" value="<%= platforms[i].name %>" type="checkbox" id="platforms-<%= i %>" <% if (platforms[i].checked) { %> checked <% } %>>
            <label for="platforms-<%= i %>"><%= platforms[i].name %></label>
          </div>
        <% } %>
      </div>
    </div>
    <div><button type="submit">Submit</button></div>
  </form>
</body>
</html>